@model ViewModels.Models.RegisterationRequestModel
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/roboto-font.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/fontawesome-all.min.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/css/stylereg.css" />
</head>
<body class="form-v5">
    <div class="page-content">
        <div class="form-v5-content">
            <form class="form-detail" method="post">              
                <h2>Register Account Form</h2>
                <div class="form-row">
                    <label for="full-name">User Name</label>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="Mobile No..." />
                </div>
                <br />
                <div class="form-row">
                    <label for="your-email">Your Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name..." />

                </div>
                <br />
                <div class="form-row">
                    <label for="password">Password</label>
                    <input asp-for="Password" type="text" class="form-control" placeholder="Password..." />

                </div>
                <br />
                <div class="form-row">
                    <label for="password">Customer Id</label>
                    <input asp-for="Customer_Id" type="text" class="form-control" placeholder="Customer Id..." />

                </div>
                <br />

                @if (User.Claims.ToList() != null && User.Claims.ToList().Count() > 0 && User.Claims.ToList()[1].Value != null && (User.Claims.ToList()[1].Value == "admin" || User.Claims.ToList()[1].Value == "MasterAdmin"))
                {
                    <div class="form-row">
                        <label for="Soc_No">Socity No</label>
                        <input asp-for="Soc_No" type="text" class="form-control" placeholder="Socity No..." readonly/>

                    </div>
                    <br />
                    <div class="form-row">
                        <label for="Soc_Name">Socity Name</label>
                        <input asp-for="Soc_Name" type="text" class="form-control" placeholder="Socity Name..." />

                    </div>
                    <br />
                    <div class="form-row">
                        <label for="Role">Role</label>
                        <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">
                            <option>Select the Role</option>
                        </select>

                    </div>
                    <br />
                }
                <div class="form-row-last">
                    <button type="submit" class="form-control btn-success" value="Submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
